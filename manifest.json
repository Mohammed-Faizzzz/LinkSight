{
    "manifest_version": 3,
    "name": "Hyperlink Logger",
    "version": "1.0",
    "icon": "images/ls.png",
    "description": "Logs hyperlinks from visited web pages.",
    "permissions": ["storage", "activeTab", "webNavigation"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  